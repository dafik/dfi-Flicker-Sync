li(data-id="#{id}")
    .col-sm-5
        i(class="fa fa-fw #{icon}")
        | #{title}
    .col-sm-6
        .task.text-center task
        .progress
            .progress-bar(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;")   0%
    .col-sm-1
        input(type="checkbox" data-id="#{id}" data-type="#{type}")